<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/edittext_item">

    <TextView
        android:id="@+id/id_your_bookings_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ваши бронирования:"
        android:gravity="center"
        android:background="@color/black"
        android:textColor="@color/white"
        android:padding="8dp"
        android:textSize="20sp"
        android:layout_weight="0"/>

    <LinearLayout
        android:id="@+id/id_lets_go_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:id="@+id/id_empty_bookings_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/empty_bookings_text"
            android:gravity="center"
            android:layout_margin="8dp"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/id_lets_go_to_sport_objects_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lets_do_booking"
            android:backgroundTint="@color/green"
            android:layout_margin="8dp"
            />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/id_bookings_recycler"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

</LinearLayout>