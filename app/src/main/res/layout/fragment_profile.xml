<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_purple">

    <LinearLayout
        android:id="@+id/id_profile_info_box"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="4dp"
        android:layout_weight="1"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/main_purple"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/id_firstname_lastname_profile_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Здесь будет полное имя"
                    android:padding="4dp"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_margin="4dp"/>

                <TextView
                    android:id="@+id/id_group_profile_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Здесь будет группа"
                    android:padding="4dp"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_margin="4dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/id_open_bookings_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:text="Мои бронирования" />

        <Button
            android:id="@+id/id_edit_profile_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:text="Редактировать профиль" />

    </LinearLayout>

    <Button
        android:id="@+id/id_sign_out_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:backgroundTint="@color/red"
        android:text="Выйти из аккаунта"
        android:layout_weight="0"/>

</LinearLayout>