<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_marginHorizontal="4dp"
    android:layout_marginTop="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/main_purple">

        <TextView
            android:id="@+id/id_title_item_list_sport_objects"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/my_gray"
            android:gravity="center"
            android:paddingVertical="8dp"
            android:text="Спортивный зал"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />


        <ImageView
            android:id="@+id/id_photo_item_sport_object"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/id_title_item_list_sport_objects"
            android:layout_margin="8dp"/>

        <TextView
            android:id="@+id/id_status_item_sport_object"

            android:layout_width="0dp"
            android:layout_height="wrap_content"


            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:background="@color/status_open_item_list_sport_objects_title"
            android:gravity="center"
            android:padding="8dp"
            android:text="Открыто"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textAllCaps="true"
            app:layout_constraintBottom_toTopOf="@+id/id_button_make_request_item_sport_object"
            app:layout_constraintLeft_toRightOf="@id/id_photo_item_sport_object"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/id_title_item_list_sport_objects"
            app:layout_constraintVertical_bias="1"/>

        <Button
            android:id="@+id/id_button_make_request_item_sport_object"

            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:backgroundTint="@color/green"
            android:textColor="@color/white"
            android:text="@string/make_request"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="@id/id_status_item_sport_object"
            app:layout_constraintLeft_toLeftOf="@id/id_status_item_sport_object"
            app:layout_constraintTop_toBottomOf="@+id/id_status_item_sport_object"
            app:layout_constraintVertical_bias="0"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>